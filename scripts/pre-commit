#!/bin/bash
# Pre-commit hook for Internet Archive Apple TV
# Runs SwiftLint on staged Swift files before commit

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "üîç Running SwiftLint pre-commit check..."

# Check if SwiftLint is installed
if ! command -v swiftlint &> /dev/null; then
    echo -e "${RED}‚ùå SwiftLint is not installed.${NC}"
    echo "Install it with: brew install swiftlint"
    echo "Or add it to your Podfile: pod 'SwiftLint'"
    exit 1
fi

# Get list of staged Swift files
STAGED_SWIFT_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.swift$' || true)

if [ -z "$STAGED_SWIFT_FILES" ]; then
    echo -e "${GREEN}‚úÖ No Swift files to lint${NC}"
    exit 0
fi

echo "Checking files:"
echo "$STAGED_SWIFT_FILES" | while read -r file; do
    echo "  - $file"
done

# Create a temporary file to store the result
LINT_RESULT=0

# Run SwiftLint on staged files only
# Use --strict to treat warnings as errors (optional, can be removed)
# Using --quiet to reduce noise, remove if you want verbose output
echo ""
echo "$STAGED_SWIFT_FILES" | while read -r file; do
    if [ -f "$file" ]; then
        swiftlint lint --path "$file" --config .swiftlint.yml --quiet
    fi
done

LINT_EXIT_CODE=$?

if [ $LINT_EXIT_CODE -ne 0 ]; then
    echo ""
    echo -e "${YELLOW}‚ö†Ô∏è  SwiftLint found issues in staged files.${NC}"
    echo ""
    echo "To see all issues, run:"
    echo "  swiftlint lint"
    echo ""
    echo "To auto-fix some issues, run:"
    echo "  swiftlint lint --fix"
    echo ""
    echo "To bypass this check (not recommended), use:"
    echo "  git commit --no-verify"
    echo ""

    # For now, just warn but allow commit during migration
    # Change to 'exit 1' to enforce strict linting
    echo -e "${YELLOW}Allowing commit with warnings during migration phase.${NC}"
    echo -e "${YELLOW}This will become strict after Sprint 3.${NC}"
    exit 0
fi

echo -e "${GREEN}‚úÖ SwiftLint check passed!${NC}"
exit 0
